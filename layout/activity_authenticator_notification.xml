<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticatorNotificationActivity"
    android:orientation="vertical"
    android:background="@drawable/background_page"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_corner_image">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Authenticator Announcements Page"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comingSoonTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coming Soon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/comingsoonimg"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>


</LinearLayout>
